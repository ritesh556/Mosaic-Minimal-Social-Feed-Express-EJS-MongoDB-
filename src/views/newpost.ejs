<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>This Week ¬∑ Mosaic</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-950 text-white min-h-screen">

  <!-- Navbar -->
  <header class="bg-zinc-900/95 backdrop-blur-md sticky top-0 z-40 border-b border-zinc-800">
    <div class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
      <a href="/" class="text-xl font-bold tracking-tight bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
        Mosaic
      </a>
      <nav class="flex items-center gap-3">
        <% if (user) { %>
          <div class="hidden sm:flex items-center gap-3 px-3 py-2 rounded-xl bg-zinc-800/50">
            <div class="w-8 h-8 rounded-full overflow-hidden bg-gradient-to-br from-blue-500 to-purple-600 grid place-items-center">
              <% if (user.avatarUrl) { %>
                <img src="<%= user.avatarUrl %>" alt="Me" class="w-full h-full object-cover" onerror="this.style.display='none'">
              <% } else { %>
                <span class="text-xs font-semibold text-white">
                  <%= (user.username || user.email || '?').trim().charAt(0).toUpperCase() %>
                </span>
              <% } %>
            </div>
            <span class="hidden md:inline text-sm font-medium"><%= user.username || user.email %></span>
          </div>
          <a href="/" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-xl font-medium transition-all hover:scale-105">Home</a>
          <a href="/dashboard" class="bg-zinc-800 hover:bg-zinc-700 px-4 py-2 rounded-xl font-medium transition-all">Dashboard</a>
          <a href="/logout" class="bg-zinc-800 hover:bg-zinc-700 px-4 py-2 rounded-xl font-medium transition-all">Logout</a>
        <% } else { %>
          <a href="/login" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-xl font-medium transition-all">Login</a>
          <a href="/register" class="bg-zinc-800 hover:bg-zinc-700 px-4 py-2 rounded-xl font-medium transition-all">Register</a>
        <% } %>
      </nav>
    </div>
  </header>

  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="border-b border-zinc-800/50 bg-gradient-to-b from-zinc-900/50 to-transparent">
      <div class="max-w-7xl mx-auto px-4 py-12">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-white via-blue-100 to-purple-100 bg-clip-text text-transparent">
              This Week's Highlights
            </h1>
            <p class="text-zinc-400 text-lg max-w-2xl">
              Discover the most amazing moments shared by our community in the past 7 days. Click any post to explore in detail.
            </p>
          </div>

          <div class="flex items-center gap-4">
            <div class="text-right">
              <div class="text-2xl font-bold text-blue-400"><%= (posts && posts.length) || 0 %></div>
              <div class="text-sm text-zinc-400">Posts this week</div>
            </div>

            <% if (user) { %>
              <a href="/dashboard" class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 px-6 py-3 rounded-xl font-medium transition-all hover:scale-105 shadow-lg shadow-blue-500/25">
                Add Yours
              </a>
            <% } %>
          </div>
        </div>
      </div>
    </section>

    <!-- Posts Grid -->
    <section class="py-8">
      <div class="max-w-7xl mx-auto px-4">

        <% if (!posts || !posts.length) { %>
          <div class="text-center py-20">
            <div class="w-32 h-32 mx-auto mb-8 rounded-full bg-gradient-to-br from-zinc-800 to-zinc-900 flex items-center justify-center border border-zinc-700">
              <svg class="w-16 h-16 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4">No posts this week yet</h3>
            <p class="text-zinc-400 mb-8 max-w-md mx-auto">
              Be the first to share something amazing this week! Your post could be the highlight that inspires others.
            </p>
            <% if (user) { %>
              <a href="/posts/new" class="inline-flex items-center gap-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 px-8 py-4 rounded-xl font-medium transition-all hover:scale-105 shadow-lg shadow-blue-500/25">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Create First Post This Week
              </a>
            <% } else { %>
              <a href="/login" class="inline-flex items-center gap-3 bg-blue-600 hover:bg-blue-700 px-8 py-4 rounded-xl font-medium transition-all">
                Login to Share
              </a>
            <% } %>
          </div>
        <% } else { %>

          <!-- Posts Grid (no inline JS; use data-* attributes) -->
          <div id="postsGrid" class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
            <% posts?.forEach((p, index) => { %>
              <article class="group bg-zinc-900/80 backdrop-blur-sm rounded-2xl border border-zinc-800 hover:border-zinc-700 transition-all duration-300 cursor-pointer hover:shadow-2xl hover:shadow-blue-500/10 hover:-translate-y-1"
                       data-open-post data-index="<%= index %>">
                <!-- Post Image -->
                <div class="relative overflow-hidden rounded-t-2xl bg-zinc-900">
                  <div class="aspect-square">
                    <img src="<%= p.imageUrl %>" alt="<%= p.title %>"
                         class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                         loading="lazy" onerror="this.onerror=null; this.src='/placeholder.jpg';"/>
                  </div>
                  <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
                    <div class="opacity-0 group-hover:opacity-100 transition-all duration-300 transform scale-90 group-hover:scale-100">
                      <div class="bg-white/20 backdrop-blur-sm rounded-full p-4">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
                        </svg>
                      </div>
                    </div>
                  </div>
                  <div class="absolute top-3 right-3 bg-black/60 backdrop-blur-sm rounded-full px-2 py-1 flex items-center gap-1">
                    <span class="text-pink-400">‚ù§Ô∏è</span>
                    <span class="text-white text-sm font-medium"><%= p.likesCount %></span>
                  </div>
                </div>

                <!-- Post Info -->
                <div class="p-4">
                  <h3 class="text-lg font-semibold leading-tight mb-2 group-hover:text-blue-300 transition-colors line-clamp-2"><%= p.title %></h3>
                  <div class="flex items-center gap-2 mb-3">
                    <div class="w-8 h-8 rounded-full overflow-hidden bg-gradient-to-br from-blue-500 to-purple-600 grid place-items-center">
                      <% if (p.userId?.avatarUrl) { %>
                        <img src="<%= p.userId.avatarUrl %>" alt="Avatar" class="w-full h-full object-cover" onerror="this.style.display='none'">
                      <% } else { %>
                        <span class="text-xs font-bold text-white"><%= (p.userId?.username || p.userId?.email || '?').trim().charAt(0).toUpperCase() %></span>
                      <% } %>
                    </div>
                    <div class="min-w-0 flex-1">
                      <p class="text-sm font-medium truncate"><%= p.userId?.username || p.userId?.email || 'Unknown User' %></p>
                      <time class="text-xs text-zinc-400" datetime="<%= new Date(p.createdAt).toISOString() %>"><%= new Date(p.createdAt).toLocaleDateString() %></time>
                    </div>
                  </div>

                  <!-- Quick Actions -->
                  <div class="flex items-center justify-between">
                    <% if (user) { %>
                      <button class="flex items-center gap-1 px-3 py-1 rounded-lg text-xs font-medium transition-all hover:scale-105 <%= p.likedByMe ? 'bg-pink-600 hover:bg-pink-700' : 'bg-zinc-800 hover:bg-zinc-700' %>"
                              data-like data-id="<%= p._id %>" data-liked="<%= p.likedByMe ? '1' : '0' %>">
                        <span class="like-heart"><%= p.likedByMe ? '‚ù§Ô∏è' : 'ü§ç' %></span>
                        <span class="like-label"><%= p.likedByMe ? 'Loved' : 'Love' %></span>
                      </button>
                    <% } else { %>
                      <span class="flex items-center gap-1 px-3 py-1 rounded-lg bg-zinc-800 text-xs">
                        <span>ü§ç</span><span>Love</span>
                      </span>
                    <% } %>

                    <div class="opacity-0 group-hover:opacity-100 transition-opacity">
                      <svg class="w-4 h-4 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
                      </svg>
                    </div>
                  </div>
                </div>
              </article>
            <% }) %>
          </div>
        <% } %>

      </div>
    </section>
  </main>

  <!-- Modal Overlay -->
  <div id="postModal" class="fixed inset-0 bg-black/90 backdrop-blur-sm z-50 flex items-center justify-center p-4 opacity-0 pointer-events-none transition-all duration-300">
    <div class="bg-zinc-900 rounded-2xl max-w-5xl max-h-[95vh] w-full overflow-hidden border border-zinc-700 transform scale-95 transition-all duration-300" id="modalContent"></div>
  </div>

  <footer class="border-t border-zinc-800 bg-zinc-900/50 backdrop-blur-sm mt-16">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="flex items-center justify-between flex-wrap gap-4">
        <div>
          <h3 class="text-lg font-semibold mb-2 bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">Mosaic</h3>
          <p class="text-zinc-400 text-sm">Capturing moments, connecting hearts</p>
        </div>
        <div class="text-right">
          <p class="text-zinc-500 text-xs">¬© <%= new Date().getFullYear() %> Mosaic. All rights reserved.</p>
          <p class="text-zinc-600 text-xs mt-1">This week's collection</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Pass data (no inline logic) -->
  <script id="thisweek-posts" type="application/json">
  <%- JSON.stringify(posts.map(p => ({
    id: String(p._id),
    title: p.title,
    imageUrl: p.imageUrl,
    userId: {
      _id: p.userId?._id || '',
      username: p.userId?.username || p.userId?.email || 'Unknown User',
      avatarUrl: p.userId?.avatarUrl || '',
      role: p.userId?.role || ''
    },
    createdAt: new Date(p.createdAt).toISOString(),
    likesCount: p.likesCount,
    likedByMe: !!p.likedByMe
  }))) %>
  </script>

  <script id="thisweek-flags" type="application/json">
  <%- JSON.stringify({
    isLoggedIn: !!user,
    currentUserId: user?._id || '',
    isAdmin: !!(user && user.role === 'admin')
  }) %>
  </script>

  <!-- External JS (served from /public) -->
  <script src="/scripts/thisweek.js" defer></script>

</body>
</html>
